<view class="weui-search-bar">
  <view class="weui-search-bar__form">
      <view class="weui-search-bar__box">
          <icon class="weui-icon-search_in-box" type="search" size="14"></icon>
          <input type="text" class="weui-search-bar__input" placeholder="搜索" value="{{inputVal}}" focus="{{inputShowed}}" bindinput="inputTyping" />
          <view class="weui-icon-clear" wx:if="{{inputVal.length > 0}}" bindtap="clearInput">
              <icon type="clear" size="14"></icon>
          </view>
      </view>
      <label class="weui-search-bar__label" hidden="{{inputShowed}}" bindtap="showInput">
          <icon class="weui-icon-search" type="search" size="14"></icon>
          <view class="weui-search-bar__text">搜索</view>
      </label>
  </view>
  <view class="weui-search-bar__cancel-btn" hidden="{{!inputShowed}}" bindtap="hideInput">取消</view>
</view>

<view class="weui-cells searchbar-result" wx:if="{{searchType.length > 0}}">
  <view wx:for="{{searchType}}" wx:key="index">
    <navigator url="/pages/business/list/list?goodsSecondTypeId={{item._id}}" class="weui-cell" hover-class="weui-cell_active">
        <view class="weui-cell__bd">
            <view>{{item.name}}</view>
        </view>
    </navigator>
  </view>
</view>

<view class="weui-cells searchbar-result" wx:if="{{searchGoods.length > 0}}">
  <view wx:for="{{searchGoods}}" wx:key="index">
    <navigator url="/pages/business/details/details?goodsId={{item._id}}" class="weui-cell" hover-class="weui-cell_active">
        <view class="weui-cell__bd">
            <view>{{item.goodsName}}</view>
        </view>
    </navigator>
  </view>
</view>

<view class="main">
    <swiper indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
        <block wx:for="{{imgUrls}}" wx:key="{{index}}">
            <swiper-item>
                <image src="{{item}}" class="slide-image" width="100%"/>
            </swiper-item>
        </block>
    </swiper>
    <view class="newest">
        <view class="newest-title"><text>最近新品</text></view>
        <view class="newest-box">
          <block wx:for="{{goods}}" wx:key="{{index}}">
            <view class="newest-list">
              <navigator url="../details/details?goodsId={{item._id}}">
                <image src="{{imgStaticPath}}{{item.goodsIndexImg}}"></image>
                <view class="newest-text"><text>{{item.goodsName}}</text></view>
                <view class="newest-text"><text>￥ {{item.goodsPrice[0]}}</text></view>
              </navigator>
            </view>
          </block>
        </view>
    </view>
</view>
<i-load-more tip="购物说明" loading="{{ false }}" bindtap="explain"/>
